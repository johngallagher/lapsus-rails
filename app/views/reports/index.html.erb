  <%= form_for(@report, method: :get, html: {id: 'report_form'}) do |form| %>
    <div class="col-lg-4 pull-right">
      <div class="input-group">
        <%= form.text_field(:daterange, class: 'form-control') %>
        <span class="input-group-btn">
          <%= form.submit 'Refresh', class: 'btn btn-default' %>
        </span>
      </div>
    </div>
  <% end %>

<table class='table'>
  <tr>
    <th>Project</th>
    <th>Time</th>
  </tr>
  <% @report.projects.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td><%= distance_of_time_in_words(project.time) %></td>
    </tr>
  <% end %>
</table>
